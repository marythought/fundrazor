<p id="notice"><%= notice %></p>

<h1>Solicitations</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Main image</th>
      <th>Campaign</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicitations.each do |solicitation| %>
      <tr>
        <td><%= solicitation.goal %></td>
        <td><%= solicitation.main_image %></td>
        <td><%= solicitation.campaign %></td>
        <td><%= solicitation.user %></td>
        <td><%= link_to 'Show', solicitation %></td>
        <td><%= link_to 'Edit', edit_solicitation_path(solicitation) %></td>
        <td><%= link_to 'Destroy', solicitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


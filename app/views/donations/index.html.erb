<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table>
  <thead>
    <tr>
      <th>Fundraiser</th>
      <th>Amount</th>
      <th>Donor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.solicitation.campaign.name %></td>
        <td><%= donation.amount %></td>
        <td><%= donation.user.email %></td>
        <td><%= link_to 'Show', campaign_solicitation_donation_path(@campaign, @solicitation, donation) %></td>
        <td><%= link_to 'Edit', edit_campaign_solicitation_donation_path(@campaign, @solicitation, donation) %></td>
        <td><%= link_to 'Destroy', campaign_solicitation_donation_path(@campaign, @solicitation, donation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_campaign_solicitation_donation_path %>
